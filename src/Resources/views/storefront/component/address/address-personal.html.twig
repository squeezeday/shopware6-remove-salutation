{% sw_extends '@Storefront/storefront/component/address/address-personal.html.twig' %}

{% block component_address_personal_fields_salutation %}
	{% block component_address_form_salutation_select %}
		{% for salutation in page.salutations  %}
			{% if salutation.salutationKey == 'not_specified' %}
				<input type="hidden" id="{{ idPrefix ~ prefix }}personalSalutation" class="{% if formViolations.getViolations('/salutationId') is not empty %} is-invalid{% endif %}" name="{% if prefix %}{{ prefix }}[salutationId]{% else %}salutationId{% endif %}" required="required" value="{{ salutation.id }}"/>
			{% endif %}
		{% endfor %}
	{% endblock %}
{% endblock %}
